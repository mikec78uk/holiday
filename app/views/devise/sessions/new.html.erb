<% @page_title = 'Sign in to view the latest price changes' %>
<% @meta_description = "View prices changes for holidays in your watchlist" %>

<%= render partial: 'layouts/watchlistHeader' %>

<div class="top-padding"></div>
<div class="wrapper">
	<div class="registration-form">
		<h2 class="devise">Sign in</h2>
		
		<% if flash[:alert].present? %>
          <div data-alert class="home-flash">
            <%= flash[:alert] %>
          </div>
		<% end %>
		<% if flash[:notice].present? %>
          <div data-alert class="home-flash">
            <%= flash[:notice] %>
          </div>
		<% end %>
		
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true %>
		    <%= f.input :password, required: false %>
		    
		  </div>
		
		  <div class="form-actions">
		    <%= f.button :submit, "Sign in", class: "devise" %>
		  </div>
		<% end %>
		
		<%= render "devise/shared/links" %>
	</div>
</div>
<div class="top-padding-footer"></div>
<%= render partial: 'layouts/footer' %>