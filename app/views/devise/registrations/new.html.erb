<% @page_title = 'Register to start tracking prices' %>
<% @meta_description = "Once registered you will be able to MONITOR PACKAGE HOLIDAY PRICES from Thomson and First Choice" %>

<%= render partial: 'layouts/watchlistHeader' %>
<div class="top-padding"></div>
<div class="wrapper">
	<div class="registration-form">
    	<h2 class="devise">Register to start tracking holiday prices</h2>
    		<% if flash[:alert].present? %>
              <div data-alert class="home-flash">
                <%= flash[:alert] %>
              </div>
    		<% end %>
    		<% if flash[:notice].present? %>
              <div data-alert class="home-flash">
                <%= flash[:notice] %>
              </div>
    		<% end %>
    		
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :email, required: true, autofocus: true,label: "Email Address", hint: "So we can contact you when the price changes" %>
        <%= f.input :password, required: true, label: "Create a Password", hint: "Passwords should be at least  8 characters" %>
        <%= f.input :password_confirmation, required: true %>
      </div>
      <p class="terms-agreement">By signing up to Holidaytracker.co.uk you are agreeing to our <%= link_to "Terms of service", terms_page_path, class: "orange" %>.
      <div class="form-actions">
        <%= f.button :submit, "Start tracking prices", class: "devise" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
	</div>
</div>
<div class="top-padding-footer"></div>
<%= render partial: 'layouts/footer' %>