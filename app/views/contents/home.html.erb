<% time = Time.new %>
<% this_year = time.year %>
<% next_year = this_year + 1 %>

<% @page_title = "Track prices of Thomson and First Choice "  + this_year.to_s + " & " + next_year.to_s + " Package Holidays" %>

<%= render partial: 'layouts/watchlistHeader' %>

<div class="home-main">
	<div class="wrapper">
		<div class="hero">
			<h1 class="h1home"><span class="tag">Track package holiday prices from</span><br>Thomson and First Choice<br><span class="tag">so you always know the best time to buy</span></h1>

			

				<% if user_signed_in? %>
					<%= link_to "View Your Watchlist", holidays_path, class: "button" %>
				<% else %>
					<%= link_to "Start tracking prices for free!", new_user_registration_path, class: "button" %>
				<% end %>
		</div>
		
	</div>
</div>



<div id="instructions" class="instructions">
		<div class="wrapper">
			<h2 class="instruction-header">To monitor prices, simply head to <a href="http://www.thomson.co.uk" target="_blank" title="Thomon.co.uk (new window)">Thomson.co.uk</a> or <a href="http://www.firstchoice.co.uk" target="_blank" title="Firstchoice.co.uk (new window)">FirstChoice.co.uk</a></h2>
				
		<p class="instruction-step step1"><span class="step-no">Step 1</span>Search for your ideal holiday</p>
		
		
		<p class="instruction-step step2"><span class="step-no">Step 2</span><span class="indent">Select "more details" on<br>the holiday you want to monitor</span></p>	
		
		
		<p class="instruction-step step3"><span class="step-no">Step 3</span>Copy the web address in it's entirety and add it to you <i>Holidaytracker.co.uk Watchlist</i></p>
		
		
		
		</div>
	</div>







<div class = "wrapper group">
	<div class="holiday">
		
